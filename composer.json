{
	"name": "stoic/pdo",
	"description": "PDO helper components for the Stoic framework",
	"version": "1.0.0",
	"homepage": "https://stoic-framework.com",
	"autoload": {
		"psr-0": {
			"Stoic\\Utilities\\": "./Utilities"
		},
		"psr-4": {
			"Stoic\\Utilities\\": "./Utilities"
		},
		"exclude-from-classmap": [
			"/Tests/"
		]
	},
	"repositories": [
		{
			"url": "https://github.com/zibings/stoic-php-core.git",
			"type": "git"
		},
		{
			"url": "https://github.com/zibings/stoic-php-io.git",
			"type": "git"
		}
	],
	"require": {
		"php": "^7.0",
		"stoic/stoic": "dev-master",
		"stoic/io": "dev-master"
	},
	"require-dev": {
		"phpunit/phpunit": "^7",
		"jimbojsb/pseudo": "0.4"
	}
}